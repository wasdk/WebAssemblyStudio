{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "module": "commonjs",
      "target": "es6",
      "lib": ["dom", "es6", "es2017.object"],
      "jsx": "react",
      "declaration": true
  },
  "include": [
      "./src/**/*",
      "./tests/**/*"
  ],
  "exclude": [
      "./templates/**/*"
  ]
}